<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="4dp" />
            <solid android:color="#C0C0C0" /> <!-- Background color of the progress bar -->
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="4dp" />
                <solid android:color="#FF6200EE" /> <!-- Secondary progress color (optional) -->
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="4dp" />
                <solid android:color="#FF6200EE" /> <!-- Primary progress color -->
            </shape>
        </clip>
    </item>
</layer-list>
