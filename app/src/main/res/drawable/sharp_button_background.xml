<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/design_default_color_primary_dark" /> <!-- Color when button is pressed -->
            <!-- No corner radius to keep edges sharp -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/design_default_color_primary" /> <!-- Default button color -->
            <!-- No corner radius to keep edges sharp -->
        </shape>
    </item>
</selector>
